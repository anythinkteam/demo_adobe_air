<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/native_video_fullscreen_action_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nend_ad_video_cta"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_gravity="left|top"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <ToggleButton
        android:id="@+id/native_video_fullscreen_action_toggle_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nend_ad_video_toggle_volume"
        android:layout_gravity="right|bottom"
        />

    <ImageView
        android:id="@+id/native_video_fullscreen_action_optout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nend_ad_native_video_information"
        android:scaleType="fitCenter"
        android:layout_gravity="left|bottom"
        />

</FrameLayout>