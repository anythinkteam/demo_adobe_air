<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_view_replay_cta_port"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    android:background="#90000000"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rectangle_media_view_replay_cta_port"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="@dimen/max_width_rectangle_media_view_replay_cta_port"
        >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/dimenstion_ratio_media_view_replay_cta_port"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintDimensionRatio="h,9:16">

        <android.support.constraint.Guideline
            android:id="@+id/guide_media_view_replay_area_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10"
            />

        <android.support.constraint.Guideline
            android:id="@+id/guide_media_view_replay_area_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_media_view_replay_area_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_media_view_replay_area_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90"
            />

        <ImageButton
            android:id="@+id/media_view_button_replay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nend_ad_native_video_replay"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/guide_media_view_replay_area_top"
            app:layout_constraintLeft_toLeftOf="@id/guide_media_view_replay_area_left"
            app:layout_constraintRight_toRightOf="@id/guide_media_view_replay_area_right"
            app:layout_constraintBottom_toTopOf="@id/space_rectangle_media_view_replay_cta"
            />
        <net.nend.android.internal.ui.views.formats.FontFitTextView
            android:id="@+id/description_media_view_button_replay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/native_video_replay"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/media_view_button_replay"
            app:layout_constraintLeft_toLeftOf="@id/media_view_button_replay"
            app:layout_constraintRight_toRightOf="@id/media_view_button_replay"
            />

        <Space
            android:id="@id/space_rectangle_media_view_replay_cta"
            android:layout_width="0dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/media_view_button_replay"
            app:layout_constraintBottom_toTopOf="@id/media_view_button_cta"
            />

        <ImageButton
            android:id="@+id/media_view_button_cta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/nend_ad_native_video_replay_cta"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/space_rectangle_media_view_replay_cta"
            app:layout_constraintLeft_toLeftOf="@id/media_view_button_replay"
            app:layout_constraintRight_toRightOf="@id/media_view_button_replay"
            app:layout_constraintBottom_toBottomOf="@id/guide_media_view_replay_area_bottom"
            />
        <net.nend.android.internal.ui.views.formats.FontFitTextView
            android:id="@+id/description_media_view_button_cta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/media_view_button_cta"
            app:layout_constraintLeft_toLeftOf="@id/media_view_button_cta"
            app:layout_constraintRight_toRightOf="@id/media_view_button_cta"
            />

    </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
