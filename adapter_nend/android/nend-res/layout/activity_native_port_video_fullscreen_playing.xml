<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.nend.android.internal.ui.activities.formats.FullscreenVideoPlayingActivity">

    <net.nend.android.internal.ui.views.video.NendAdVideoView
        android:id="@id/native_video_fullscreen_videoview"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/native_video_fullscreen_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintDimensionRatio="9:16"
        >
    </net.nend.android.internal.ui.views.video.NendAdVideoView>

    <include layout="@layout/media_replay_cta_port"
        android:id="@+id/native_video_fullscreen_replay_area"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/native_video_fullscreen_videoview"
        app:layout_constraintRight_toRightOf="@id/native_video_fullscreen_videoview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </include>

    <include layout="@layout/media_frame_actions"
        android:id="@+id/native_video_fullscreen_action_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/native_video_fullscreen_videoview"
        app:layout_constraintRight_toRightOf="@id/native_video_fullscreen_videoview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </include>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/native_video_fullscreen_card"
        android:layout_width="@dimen/native_video_fullscreen_card_width_video_port"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/native_video_fullscreen_videoview"
        >

        <net.nend.android.internal.ui.views.formats.RoundedImageView
            android:id="@+id/native_video_fullscreen_card_image"
            android:layout_width="@dimen/native_video_fullscreen_card_image_size_video_port"
            android:layout_height="@dimen/native_video_fullscreen_card_image_size_video_port"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_title"
            />

        <TextView
            android:id="@id/native_video_fullscreen_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="@dimen/native_video_fullscreen_card_title_size"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_image"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_advertiser"
            />

        <TextView
            android:id="@id/native_video_fullscreen_card_advertiser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textSize="@dimen/native_video_fullscreen_card_advertiser_size"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_title"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_star001"
            />

        <ImageView
            android:id="@id/native_video_fullscreen_card_star001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nend_ad_star_none"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_advertiser"
            app:layout_constraintRight_toLeftOf="@id/native_video_fullscreen_card_star002"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_rating_count"
            />
        <ImageView
            android:id="@id/native_video_fullscreen_card_star002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nend_ad_star_none"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_advertiser"
            app:layout_constraintLeft_toRightOf="@id/native_video_fullscreen_card_star001"
            app:layout_constraintRight_toLeftOf="@id/native_video_fullscreen_card_star003"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_rating_count"
            />
        <ImageView
            android:id="@id/native_video_fullscreen_card_star003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nend_ad_star_none"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_advertiser"
            app:layout_constraintLeft_toRightOf="@id/native_video_fullscreen_card_star002"
            app:layout_constraintRight_toLeftOf="@id/native_video_fullscreen_card_star004"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_rating_count"
            />
        <ImageView
            android:id="@id/native_video_fullscreen_card_star004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nend_ad_star_none"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_advertiser"
            app:layout_constraintLeft_toRightOf="@id/native_video_fullscreen_card_star003"
            app:layout_constraintRight_toLeftOf="@id/native_video_fullscreen_card_star005"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_rating_count"
            />
        <ImageView
            android:id="@id/native_video_fullscreen_card_star005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nend_ad_star_none"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_advertiser"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/native_video_fullscreen_card_star004"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_rating_count"
            />
        <TextView
            android:id="@id/native_video_fullscreen_card_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_star001"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_description"
            />

        <TextView
            android:id="@id/native_video_fullscreen_card_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="@dimen/native_video_fullscreen_card_description_size"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_rating_count"
            app:layout_constraintBottom_toTopOf="@id/native_video_fullscreen_card_cta"
            />


        <Button
            android:id="@id/native_video_fullscreen_card_cta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/nend_ad_native_video_cta"
            app:layout_constraintTop_toBottomOf="@id/native_video_fullscreen_card_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/native_video_fullscreen_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nend_ad_video_close"
        android:layout_gravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
