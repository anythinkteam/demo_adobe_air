<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="funheroicVideoDialogActivityTheme" parent="@android:style/Theme.Holo.Dialog.MinWidth">

        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮在activity上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.4</item><!-- 灰度 -->
        <item name="android:windowContentOverlay">@null</item><!-- 对话框是否有遮盖 -->

        <item name="android:colorBackgroundCacheHint">@null</item><!-- 背景缓存颜色 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/funheroic_videoad_transparent</item><!-- 背景透明 -->

    </style>


</resources>