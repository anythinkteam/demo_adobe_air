<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="25dp"
    android:paddingLeft="25dp">

    <com.funheroic.imageloader.ui.RecycleImageView
        android:id="@+id/funheroic_icon_close"
        android:layout_width="@dimen/funheroic_interstitial_close_size"
        android:layout_height="@dimen/funheroic_interstitial_close_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/funheroic_interstitial_icon_close" />

    <com.funheroic.imageloader.ui.RecycleImageView
        android:id="@+id/funheroic_app_banner"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="10dp"
        android:background="@color/funheroic_component_white"
        android:layout_below="@+id/funheroic_icon_close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />

    <com.funheroic.imageloader.ui.RecycleImageView
        android:id="@+id/funheroic_ad_choice"
        android:layout_width="@dimen/funheroic_banner_adchoice_size"
        android:layout_height="@dimen/funheroic_banner_adchoice_size"
        android:layout_marginTop="10dp"
        android:layout_below="@id/funheroic_icon_close"
        android:layout_alignParentLeft="true"
        android:src="@drawable/funheroic_ad_icon_ad"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/funheroic_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/funheroic_app_banner"
        android:layout_centerHorizontal="true"
        android:background="@color/funheroic_component_white">

        <com.funheroic.imageloader.ui.RecycleImageView
            android:id="@+id/funheroic_app_icon"
            android:layout_width="@dimen/funheroic_interstitial_icon_size_2"
            android:layout_height="@dimen/funheroic_interstitial_icon_size_2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:layout_marginRight="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:layout_marginTop="@dimen/funheroic_interstitial_icon_margin_top_2" />

        <RelativeLayout
            android:id="@+id/funheroic_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/funheroic_interstitial_icon_size_2"
            android:layout_marginTop="@dimen/funheroic_interstitial_icon_margin_top_2"
            android:layout_toRightOf="@id/funheroic_app_icon"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/funheroic_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/funheroic_banner_title_color"
                android:textSize="@dimen/funheroic_interstitial_title_size" />

            <com.funheroic.imageloader.ui.AppRatingView
                android:id="@+id/funheroic_app_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/funheroic_app_name"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/funheroic_app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/funheroic_app_icon"
            android:layout_marginBottom="@dimen/funheroic_interstitial_desc_margin_top_bottom_2"
            android:layout_marginLeft="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:layout_marginRight="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:layout_marginTop="@dimen/funheroic_interstitial_desc_margin_top_bottom_2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/funheroic_interstitial_desc_color"
            android:textSize="@dimen/funheroic_interstitial_desc_text_size" />

        <Button
            android:id="@+id/funheroic_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/funheroic_interstitial_button_height"
            android:layout_below="@id/funheroic_app_desc"
            android:layout_marginLeft="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:layout_marginRight="@dimen/funheroic_interstitial_icon_margin_left_right_2"
            android:background="@drawable/funheroic_component_shape_btn"
            android:text="@string/funheroic_component_btn_download_text"
            android:textColor="@color/funheroic_component_white"
            android:textSize="@dimen/funheroic_interstitial_button_text_size" />
        <View
            android:id="@+id/funheroic_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/funheroic_interstitial_button_margin_bottom_2"
            android:layout_below="@id/funheroic_download"/>

    </RelativeLayout>

    <com.funheroic.imageloader.ui.LoadingView
        android:id="@+id/funheroic_loading_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>