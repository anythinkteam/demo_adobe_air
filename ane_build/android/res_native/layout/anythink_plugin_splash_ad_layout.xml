<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.anythink.nativead.views.RoundImageView
        android:id="@+id/anythink_plugin_splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/anythink_plugin_splash_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="middle"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#aa000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:textStyle="bold" />

    <com.anythink.nativead.views.AppRatingView
        android:id="@+id/anythink_plugin_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anythink_plugin_splash_ad_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"></com.anythink.nativead.views.AppRatingView>


    <TextView
        android:id="@+id/anythink_plugin_splash_ad_install_btn"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/anythink_plugin_splash_btn"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/anythink_plugin_splash_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/anythink_plugin_splash_ad_install_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="29dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#aa000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold" />


    <com.anythink.nativead.views.RoundFrameLayout
        android:id="@+id/anythink_plugin_splash_ad_content_image_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/anythink_plugin_splash_desc"
        android:layout_below="@id/anythink_plugin_rating_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></com.anythink.nativead.views.RoundFrameLayout>


    <TextView
        android:id="@+id/anythink_plugin_splash_self_ad_logo"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:background="@drawable/anythink_plugin_splash_ad_bg"
        android:gravity="center"
        android:text="AD"
        android:textColor="#e9e9e9"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/anythink_plugin_splash_ad_from"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/anythink_plugin_splash_self_ad_logo"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#e9e9e9"
        android:includeFontPadding="false"
        android:background="#44ffffff"
        android:textSize="11dp"
        android:visibility="gone"/>

    <com.anythink.nativead.views.RoundImageView
        android:id="@+id/anythink_plugin_splash_ad_logo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@id/anythink_plugin_splash_ad_content_image_area"
        android:layout_alignRight="@id/anythink_plugin_splash_ad_content_image_area"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp" />

</RelativeLayout>